
load("@//:rules.bzl", "proto_plugin")

proto_plugin(
    name = "cpp",
    outputs = [
        "{basename}.pb.h",
        "{basename}.pb.cc",
    ],
    visibility = ["//visibility:public"],
)

proto_plugin(
    name = "grpc_cpp",
    outputs = [
        "{basename}.grpc.pb.h",
        "{basename}.grpc.pb.cc",
    ],
    tool = "@com_github_grpc_grpc//:grpc_cpp_plugin",
    visibility = ["//visibility:public"],
)
