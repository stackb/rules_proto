    name = "thing_ts_proto",
    srcs = ["thing.ts"],
    args = ["--lib ES2015"],
    tags = ["manual"],
    tsc = "@npm_tsc//typescript/bin:tsc",
    visibility = ["//visibility:public"],
    deps = [
        "@npm_tsc//long",
        "@npm_tsc//protobufjs",
    ],
)
