load("@build_stack_rules_proto//rules:proto_compile.bzl", "proto_compile")
load("@build_stack_rules_proto//rules/go:proto_go_library.bzl", "proto_go_library")
load("@rules_proto//proto:defs.bzl", "proto_library")

proto_library(
    name = "body_proto",
    srcs = ["body.proto"],
    visibility = ["//visibility:public"],
    deps = ["@com_google_protobuf//:struct_proto"],
)

proto_library(
    name = "foo_proto",
    srcs = ["foo.proto"],
    visibility = ["//visibility:public"],
    deps = [
        ":body_proto",
        "@com_google_protobuf//:any_proto",
    ],
)

proto_compile(
    name = "body_go_compile",
    output_mappings = ["body.pb.go=github.com/example/foo/body.pb.go"],
    outputs = ["body.pb.go"],
    plugins = ["@build_stack_rules_proto//plugin/golang/protobuf:protoc-gen-go"],
    proto = "body_proto",
)

proto_go_library(
    name = "body_go_proto",
    srcs = [
        "body.pb.go",
        "foo.pb.go",
    ],
    importpath = "github.com/example/foo",
    visibility = ["//visibility:public"],
    deps = [
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
        "@org_golang_google_protobuf//types/known/anypb",
        "@org_golang_google_protobuf//types/known/structpb",
    ],
)

proto_compile(
    name = "foo_go_compile",
    output_mappings = ["foo.pb.go=github.com/example/foo/foo.pb.go"],
    outputs = ["foo.pb.go"],
    plugins = ["@build_stack_rules_proto//plugin/golang/protobuf:protoc-gen-go"],
    proto = "foo_proto",
)
