load("@rules_proto//proto:defs.bzl", "proto_library")
load("@build_stack_rules_proto//rules/go:proto_go_library.bzl", "proto_go_library")
load("@build_stack_rules_proto//rules:proto_compile.bzl", "proto_compile")

proto_library(
    name = "foo_proto",
    srcs = ["foo.proto"],
    visibility = ["//visibility:public"],
    deps = [
        "//proto/bar:body_proto",
        "@com_google_protobuf//:any_proto",
    ],
)

proto_compile(
    name = "foo_go_compile",
    mappings = {"foo.pb.go": "github.com/example/foo/foo.pb.go"},
    outputs = ["foo.pb.go"],
    plugins = ["@build_stack_rules_proto//plugin/golang/protobuf:protoc-gen-go"],
    proto = "foo_proto",
)

proto_go_library(
    name = "foo_go_proto",
    srcs = ["foo.pb.go"],
    embed = ["//proto/bar:body_go_proto"],
    importpath = "github.com/example/foo",
    visibility = ["//visibility:public"],
    deps = [
        "@org_golang_google_protobuf//reflect/protoreflect",
        "@org_golang_google_protobuf//runtime/protoimpl",
        "@org_golang_google_protobuf//types/known/anypb",
    ],
)
